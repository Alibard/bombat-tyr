<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bomba.MainActivity"
    android:background="#ecf0f1">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            
            <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginTop="0px"
      android:orientation="horizontal" >
	 <Button
                        android:id="@+id/btnautor"
                    	 android:layout_width="match_parent"
         				 android:layout_height="110dp"
         				 android:layout_weight="1"
                        android:background="@drawable/button"
                        android:drawableLeft="@drawable/autoriz"
                        android:paddingLeft="4px"
                        android:text="Авторизація"
                        android:textSize="7pt" />
                
      <Button
          android:id="@+id/btnphoto"
          android:layout_width="match_parent"
          android:layout_height="110dp"
          android:layout_weight="1"
          android:background="@drawable/button"
          android:drawableLeft="@drawable/photo"
          android:paddingLeft="4px"
          android:text="Фотогалерея"
          android:textSize="7pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >
 
        <Button
            android:id="@+id/btnNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Новини"
            android:drawableLeft="@drawable/news"
 			android:paddingLeft="4px" 
 			android:textSize="7pt"
 			android:background="@drawable/button"/>
 
        <Button
            android:id="@+id/btnContatct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Контакти" 
            android:drawableLeft="@drawable/collback"
 			android:paddingLeft="4px"
 			android:textSize="7pt"
            android:background="@drawable/button" />
            />
    </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >
 
        <Button
            android:id="@+id/btncoutry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/cantris"
            android:paddingLeft="4px"
            android:text="Країни"
            android:textSize="7pt" />
 
        <Button
            android:id="@+id/btntour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/trawel"
            android:paddingLeft="4px"
            android:text="Тури"
            android:textSize="7pt" />

    </LinearLayout>
            
            
        </LinearLayout>
    </ScrollView>

  

</LinearLayout>
